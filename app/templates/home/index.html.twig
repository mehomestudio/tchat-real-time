{% extends 'base.html.twig' %}

{% block title %}Chat Test{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block body %}
    <div class="profil-password d-none">
    </div>
    <div class="chat d-none">
        <div class="chat-rooms scrollbar-light">
            <div class="chat-rooms-list"></div>
            <div class="chat-rooms-profil">
                <div class="chat-rooms-profil-overlay d-none">
                    <p>Profil</p>
                    <ul>
                        <li data-row="update-password">Modifier mot de passe</li>
                        <li data-row="logout">Se déconnecter</li>
                    </ul>
                </div>
                <div class="chat-rooms-profil-left">
                    <div class="avatar">
                        <input class="d-none" type="file" name="avatarFile" />
                        <p>{{ app.user.pseudo|first|upper }}</p>
                        <div class="avatar-overlay d-none">
                            <i class="fa fa-pen"></i>
                        </div>
                        {% if app.user.avatar %}
                            <img src="{{ asset(app.user.avatar) }}" alt="{{ app.user.pseudo|first|upper }}" />
                        {% else %}
                        {% endif %}
                    </div>
                    <div class="chat-rooms-profil-left-pseudo">
                        {{ app.user.pseudo }}
                    </div>
                </div>
                <div class="chat-rooms-profil-right">
                    <i class="fa fa-ellipsis-v"></i>
                </div>
            </div>
        </div>
        <div class="chat-messages-list">
            <div class="chat-messages-list-header scrollbar-dark">
                {#<div class="chat-messages">
                    <div class="chat-messages-tools">
                        <i class="fa fa-pen"></i>
                        <i class="fa fa-trash-alt"></i>
                    </div>
                    <div class="avatar">
                        U
                    </div>
                    <div class="chat-messages-container">
                        <div class="chat-messages-header">
                            <span class="chat-messages-pseudo">User1</span>
                            <span class="chat-messages-date">20/02/2022</span>
                            <span class="chat-messages-heure">17:01</span>
                        </div>
                        <div class="chat-messages-body">
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Adipisci amet at corporis dignissimos
                            earum, eius esse est ex fugit hic modi odit pariatur possimus, quis quo tempore veniam
                            vero voluptatibus.
                        </div>
                    </div>
                </div>#}
            </div>
            <div class="chat-messages-list-footer">
                <div class="chat-messages-send">
                    <textarea class="form-control" name="message" placeholder="Envoyer un message dans #Général"></textarea>
                </div>
            </div>
        </div>
        <div class="chat-users-list scrollbar-light">
            <div class="chat-users-title">
                En ligne - <span class="chat-users-count">0</span>
            </div>
            <div class="chat-users">
 {#               {% for k in 1..31 %}
                <div class="chat-users-body">
                    <div class="avatar">U</div>
                    <div class="pseudo">User{{ k }}</div>
                </div>
                {% endfor %}#}
            </div>
        </div>
    </div>
{% endblock %}
